<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/PostDialog"
    android:background="@drawable/button_transparent_border"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#212121"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/EditPost_Title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Edit Post"
            android:textColor="@color/button_selectorcolor"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText_PostFragment_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_PostFragment_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_transparent_border"
            android:hint="Description"
            android:inputType="textShortMessage"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/editText_Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/location"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:enabled="false"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="end|center_vertical"
            >
            <TextView
                android:textColor="@color/button_selectorcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Participants:"
                />

            <Spinner
                android:id="@+id/spinner_PostFragment_AmtUsers"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/button_PostFragment_Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Post"/>


    </LinearLayout>

</LinearLayout>